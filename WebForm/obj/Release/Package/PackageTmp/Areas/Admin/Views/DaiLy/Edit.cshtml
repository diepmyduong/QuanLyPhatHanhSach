                        @Html.LabelFor(model => model.MaSoDaiLy, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.MaSoDaiLy, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly"} })
