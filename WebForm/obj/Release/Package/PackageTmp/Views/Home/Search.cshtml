
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
@using Core.BIZ;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Core.BIZ.Sach>
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-12">

        <!-- Categories -->
        @Html.Partial("~/Views/Shared/Category.cshtml")
        <!-- End Categories -->
        <!-- Best product -->
        @Html.Partial("~/Views/Shared/BestSell.cshtml")
        <!-- End Best product -->

    </div>

    <div class="clearfix visible-sm"></div>

    <!-- Products -->
    <div class="col-lg-9 col-md-9 col-sm-12">
        <div class="col-lg-12 col-sm-12">
            <span class="title">
                Kết quả tìm kiếm
            </span>
        </div>
        @Html.Partial("~/Views/Shared/Alert.cshtml")
        <!-- Products Box -->
        @foreach (var item in Model)
        {
            <!-- Product -->
            @Html.Partial("~/Views/Shared/ListProduct.cshtml", item)
            <!-- End Product -->
        }
        <div class="col-md-12 pull-left">
            <div class="text-center">
                @Html.PagedListPager(Model, page => Url.Action("Search", new { page, pageSize = Model.PageSize, request = ViewBag.searchKey }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
            </div>

        </div>
        
        <!--End Product Box-->
    </div>
    <!-- Products -->

    

</div>

