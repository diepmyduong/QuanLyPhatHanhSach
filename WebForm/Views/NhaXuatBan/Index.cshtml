

@{
    ViewBag.Title = "Danh mục Nhà Xuất Bản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Core.BIZ.NhaXuatBan>

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<hr />
@using (Html.BeginForm("Index", "Sach", FormMethod.Get, new { @class = "form" }))
{
    @Html.ValidationSummary(true)
    <div class="row ">
        <div class="col-md-10 form-group input-group">
            <input type="search" name="search" id="input" class="form-control"
                    value="@{if (ViewBag.SearchKey != null)
                            {
                                @ViewBag.SearchKey;
                            }
                            }"
                    required="required" title="">
            <span class="input-group-btn"><button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button></span>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.Raw(Core.DAL.NhaXuatBanManager.Properties.MaSoNXB)
        </th>
        <th>
            @Html.Raw(Core.DAL.NhaXuatBanManager.Properties.TenNXB)
        </th>
        <th>
            @Html.Raw(Core.DAL.NhaXuatBanManager.Properties.DiaChi)
        </th>
        <th>
           @Html.Raw(Core.DAL.NhaXuatBanManager.Properties.SoDienThoai)
        </th>
        <th>
            @Html.Raw(Core.DAL.NhaXuatBanManager.Properties.SoTaiKhoan)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaSoNXB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenNXB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoDienThoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoTaiKhoan)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MaSoNXB }) |
            @Html.ActionLink("Details", "Details", new { id = item.MaSoNXB }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MaSoNXB })
        </td>
    </tr>
}

</table>
<div class="row">
    <div class="col-md-4 col-md-offset-5">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize, search = ViewBag.searchKey }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-5">
        Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount Contents.
    </div>
</div>