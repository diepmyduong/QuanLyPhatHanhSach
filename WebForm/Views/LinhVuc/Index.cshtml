@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Core.BIZ.LinhVuc>

@{
    ViewBag.Title = "Danh mục Sách";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<hr />
@using (Html.BeginForm("Index", "Sach", FormMethod.Get, new { @class = "form" }))
{
    @Html.ValidationSummary(true)
    <div class="row ">
        <div class="col-md-10 form-group input-group">
            <input type="search" name="search" id="input" class="form-control" 
                   value="@{if (ViewBag.SearchKey != null)
                            {
                                @ViewBag.SearchKey;
                            }
                            }"
                   required="required" title="">
            <span class="input-group-btn"><button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button></span>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.Raw(Core.DAL.LinhVucManager.Properties.MaSoLinhVuc)
        </th>
        <th>
            @Html.Raw(Core.DAL.LinhVucManager.Properties.TenLinhVuc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaSoLinhVuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenLinhVuc)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MaSoLinhVuc }) |
            @Html.ActionLink("Details", "Details", new { id = item.MaSoLinhVuc }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MaSoLinhVuc })
        </td>
    </tr>
}

</table>
<div class="row">
    <div class="col-md-4 col-md-offset-5">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize, search = ViewBag.searchKey }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-5">
        Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount Contents.
    </div>
</div>
