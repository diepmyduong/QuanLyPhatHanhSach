@model Core.BIZ.PhieuNhap

@{
    ViewBag.Title = "Chi tiết phiếu nhập";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div>
    @*<h4>PhieuNhap</h4>*@
    <p>
        @if (Model.TrangThai == 0)
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.MaSoPhieuNhap })
            @Html.Raw(" | ")
                                                                              
        }
        
        @Html.ActionLink("Back to List", "All")
    </p>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.MaSoPhieuNhap)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MaSoPhieuNhap)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NXB)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NXB.TenNXB)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NgayLap)
                </dt>

                <dd>
                    @String.Format("{0:dd/MM/yyyy}", Model.NgayLap)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NguoiGiao)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NguoiGiao)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TrangThai)
                </dt>

                <dd>
                    @if (Model.TrangThai == 0)
                    {
                        <strong class="text-danger">Chưa duyệt</strong>
                    }
                    else
                    {
                        <strong class="text-success">Đã duyệt</strong>
                    }
                </dd>
            </dl>
        </div>
        <div class="col-md-8 text-center">
            <h2 class="text-danger">@Core.DAL.PhieuNhapManager.Properties.TongTien</h2>
            <h2 class="text-danger">
                @String.Format(ViewBag.cultureInfo, "{0:c}", Model.TongTien)
            </h2>
        </div>
    </div>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Core.DAL.PhieuNhapManager.ChiTiet.Properties.MaSoSach
            </th>
            <th>
                @Core.DAL.PhieuNhapManager.ChiTiet.Properties.Sach
            </th>
            <th>
                @Core.DAL.SachManager.Properties.TenTacGia
            </th>
            <th>
                @Core.DAL.PhieuNhapManager.ChiTiet.Properties.SoLuong
            </th>
            <th>
                @Core.DAL.PhieuNhapManager.ChiTiet.Properties.DonGia
            </th>
            <th>
                @Core.DAL.PhieuNhapManager.ChiTiet.Properties.ThanhTien
            </th>
        </tr>
        @foreach (var item in Model.ChiTiet)
        {
            Html.RenderPartial("ChiTietRow", item);
        }
    </table>

</div>

