
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Core.BIZ.PhieuNhap>
@{
    ViewBag.Title = "Danh mục phiếu nhập";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Thêm phiếu nhập", "Create")
</p>
<hr />
@using (Html.BeginForm("All", "PhieuNhap", FormMethod.Get, new { @class = "form" }))
{
    @Html.ValidationSummary(true)
    <div class="row ">
        <div class="col-md-10 form-group input-group">
            <input type="search" name="search" id="search" class="form-control"
                   value="@{if (ViewBag.SearchKey != null)
                            {
                                @ViewBag.SearchKey;
                            }
                            }"
                   required="required" title="">
            <span class="input-group-btn"><button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button></span>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Core.DAL.PhieuNhapManager.Properties.MaSoPhieuNhap
        </th>
        <th>
            @Core.DAL.PhieuNhapManager.Properties.NXB
        </th>
        <th>
            @Core.DAL.PhieuNhapManager.Properties.NguoiGiao
        </th>
        <th>
            @Core.DAL.PhieuNhapManager.Properties.NgayLap
        </th>
        <th>
            @Core.DAL.PhieuNhapManager.Properties.TongTien
        </th>
        <th>
            @Core.DAL.PhieuNhapManager.Properties.TrangThai
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaSoPhieuNhap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NXB.TenNXB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NguoiGiao)
        </td>
        <td>
            @String.Format("{0:dd/MM/yyyy}", item.NgayLap)
        </td>
        <td>
            @String.Format(ViewBag.cultureInfo, "{0:c}", item.TongTien)
        </td>
        <td>
            @if (item.TrangThai == 0)
            {
                <strong class="text-danger">Chưa duyệt</strong>
            }
            else
            {
                <strong class="text-success">Đã duyệt</strong>
            }
        </td>
        <td>
            @if (item.TrangThai == 0)
            {
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaSoPhieuNhap })
                @Html.Raw(" | ")
            }
            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSoPhieuNhap })
            @if (item.TrangThai == 0)
            {
                @Html.Raw(" | ")
                @Html.ActionLink("Xóa","Delete", new { id = item.MaSoPhieuNhap })
            }
        </td>
    </tr>
}

</table>
<div class="row">
    <div class="col-md-4 col-md-offset-5">
        @Html.PagedListPager(Model, page => Url.Action("All", new { page, pageSize = Model.PageSize, search = ViewBag.searchKey }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-5">
        Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount Contents.
    </div>
</div>
