@model Core.BIZ.ChiTietHoaDonDaiLy
@{
    Layout = null;
}
<tr class="@Model.MaSoSach">
    @using (Html.BeginCollectionItem("chitiet"))
    {
        <td class="@nameof(Core.DAL.SachManager.Properties.MaSoSach)">
            @Html.ActionLink(Model.MaSoSach.ToString(), "Details", "Sach", new { id = Model.MaSoSach }, null)
        </td>
        <td class="@nameof(Core.DAL.SachManager.Properties.TenSach)">
            @Html.ActionLink(Model.Sach.TenSach, "Details", "Sach", new { id = Model.MaSoSach }, null)
        </td>
        <td class="@nameof(Core.DAL.SachManager.Properties.TenTacGia)">
            @Html.DisplayFor(model => model.Sach.TenTacGia)
        </td>
        <td class="@nameof(Core.DAL.HoaDonDaiLyManager.ChiTiet.Properties.SoLuong)">
            @String.Format("{0:0}", Model.SoLuong)
        </td>
        <td class="@nameof(Core.DAL.HoaDonDaiLyManager.ChiTiet.Properties.DonGia)">
            @String.Format(ViewBag.cultureInfo, "{0:c}", Model.DonGia)
        </td>
        <td class="@nameof(Core.DAL.HoaDonDaiLyManager.ChiTiet.Properties.ThanhTien)">
            @String.Format(ViewBag.cultureInfo, "{0:c}", Model.ThanhTien)
        </td>
    }
</tr>
