@model Core.BIZ.NhaXuatBan

@{
    ViewBag.Title = "Xóa Nhà xuất bản";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@Html.Partial("~/Areas/Admin/Views/Shared/Alert.cshtml")
<div class="panel panel-default">
