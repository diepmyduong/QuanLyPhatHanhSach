@model Core.BIZ.LinhVuc

@{
    ViewBag.Title = "Thêm lĩnh vực";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@Html.Partial("~/Areas/Admin/Views/Shared/Alert.cshtml")
<div class="panel panel-default">
      <div class="panel-heading">
            <h3 class="panel-title">@ViewBag.Title</h3>
      </div>
      <div class="panel-body">
            @using (Html.BeginForm()) 
            {
                @Html.AntiForgeryToken()
                
                <div class="form-horizontal">
                    @*<h4>LinhVuc</h4>*@
                    <div>
                        @Html.ActionLink("Xem danh mục lịnh vực", "Index")
                    </div>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.TenLinhVuc, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.TenLinhVuc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenLinhVuc, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Thêm" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
      </div>
</div>






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
