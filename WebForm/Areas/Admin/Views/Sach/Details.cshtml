
@model Core.BIZ.Sach
@{
    ViewBag.Title = "Xem Chi Tiết";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
   
}
@Html.Partial("~/Areas/Admin/Views/Shared/Alert.cshtml")
<div class="panel panel-default">
      <div class="panel-heading">
            <h3 class="panel-title">@ViewBag.Title</h3>
      </div>
      <div class="panel-body">
            <div>
                <h4>Sách</h4>
                <p>
                    @Html.ActionLink("Xem danh mục sách", "Index") |
                    @Html.ActionLink("Sửa", "Edit", new { id = Model.MaSoSach }) |
                    @Html.ActionLink("Xem lô nhập", "LoNhapDetails","ThongKe",new {id = Model.MaSoSach},null) | 
                    @Html.ActionLink("Xem lô xuất", "LoXuatDetails", "ThongKe", new { id = Model.MaSoSach }, null)
                </p>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        @if (ViewBag.DefaultImage == null)
                        {
                            <a href="#" class="thumbnail">
                                @*@Html.DisplayFor(model => model.Image)*@
                                <img src="@ViewBag.imgSrc" alt="">
                            </a>
                        }
                        else
                        {
                            <a href="#" class="thumbnail">
                                <img src="@ViewBag.DefaultImage" alt="">
                            </a>
                        }
                    </div>
                    <div class="col-md-8">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.MaSoSach)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.MaSoSach)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.TenSach)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.TenSach)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.LinhVucSach)
                            </dt>

                            <dd>
                                @Html.ActionLink(Model.LinhVucSach.TenLinhVuc,"Details","LinhVuc",new { id = Model.MaSoLinhVuc},null)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.TenTacGia)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.TenTacGia)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.NXB)
                            </dt>

                            <dd>
                                @Html.ActionLink(Model.NXB.TenNXB, "Details", "NhaXuatBan", new { id = Model.MaSoNXB }, null)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Soluong)
                            </dt>

                            <dd>
                                @String.Format("{0:0}",Model.Soluong)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.GiaNhap)
                            </dt>

                            <dd>
                                @String.Format(ViewBag.cultureInfo, "{0:c}", Model.GiaNhap)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.GiaBan)
                            </dt>

                            <dd>
                                @String.Format(ViewBag.cultureInfo, "{0:c}", Model.GiaBan)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.MoTa)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.MoTa)
                            </dd>
                        </dl>
                        
                    </div>
                </div>
            </div>
      </div>
</div>


